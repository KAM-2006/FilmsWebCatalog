@using FilmsWebCatalog.Data.Models;
@using static FilmsWebCatalog.Common.AdminUser;
@model List<FilmActor>
@{

}
<h2 class=" text-center mb-5">List of @Model.Count FilmsActors</h2>
<div class="row mb-5">
    <div class="col">
        @if (User.IsInRole(AdminRoleName))
        {
        <a class="btn btn-primary" asp-area="" asp-controller="FilmActor" asp-action="Create">New FilmActor</a>
        }
    </div>
    <div class="col">
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Film</th>
            <th>Actor FirstName</th>
            <th>Actor LastName</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Film.Title</td>
                <td>@item.Actor.FirstName</td>
                <td>@item.Actor.LastName</td>
            </tr>
        }
    </tbody>
</table>


