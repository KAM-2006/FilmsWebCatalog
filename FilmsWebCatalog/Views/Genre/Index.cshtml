@using FilmsWebCatalog.Data.Models;
@model List<Genre>
@{
   
}
<h2 class=" text-center mb-5">List of Genres</h2>
<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-area="" asp-controller="Genre" asp-action="Create">New Genre</a>
    </div>
    <div class="col">
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>
                <td>@genre.Id</td>
                <td>@genre.Name</td>
                <td style=" white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="Genre" asp-action="Edit"
                       asp-route-id="@genre.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Genre" asp-action="Delete"
                       asp-route-id="@genre.Id" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
