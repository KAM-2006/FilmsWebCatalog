@using FilmsWebCatalog.Data.Models;
@using static FilmsWebCatalog.Common.AdminUser;
@model List<Director>
@{

}
<h2 class=" text-center mb-5">List of @Model.Count Directors</h2>
<div class="row mb-5">
    <div class="col">
        @if (User.IsInRole(AdminRoleName))
        {
        <a class="btn btn-primary" asp-area="" asp-controller="Director" asp-action="Create">New Director</a>
        }
    </div>
    <div class="col">
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Date of Birth</th>
            @if (User.IsInRole(AdminRoleName))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var director in Model)
        {
            <tr>
                <td>@director.Id</td>
                <td>@director.Name</td>
                <td>@director.DateOfBirth</td>
                <td style=" white-space:nowrap">
                    @if (User.IsInRole(AdminRoleName))
                    {
                    <a class="btn btn-primary btn-sm" asp-controller="Director" asp-action="Edit"
                       asp-route-id="@director.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Director" asp-action="Delete"
                       asp-route-id="@director.Id" onclick="return confirm('Are you sure?')">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
